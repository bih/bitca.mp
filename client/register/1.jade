form#register-one(novalidate="")
  p
    small * = required

  .row
    .form-group.col-xs-12
      input#register-email.form-control(
        type="email" placeholder="* email address"
        ng-model="email"
        ng-class="{shake: emailErr, animated: emailErr}")

  .row
    .form-group.col-xs-12
      input#register-password.form-control(
        type="password" placeholder="* password"
        ng-model="password"
        ng-class="{shake: passwordErr, animated: passwordErr}")

  .row
    .form-group.col-xs-12
      input#register-password-confirm.form-control(
        type="password" placeholder="* password (once more)"
        ng-model="confirm")

footer
  .row
    .form-group.col-xs-12.col-sm-6
      a(ui-sref="main")
        button#register-goback1.btn.btn-warning
          | go back
    .form-group.col-xs-12.col-sm-6
      button#register-continue1.btn.btn-success(ng-click="register()")
        | continue
