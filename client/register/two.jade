form#register-two(novalidate="" ng-submit="!submitting && submit()")

  .row
    .form-group.col-xs-12.col-sm-6
      label(for="register-fname") first name *
      input#register-fname.form-control(
        type="text" placeholder="Sally"
        ng-model="profile.first"
        ng-disabled="lockInputs")
    .form-group.col-xs-12.col-sm-6
      label(for="register-lname") last name *
      input#register-lname.form-control(
        type="text" placeholder="Hacker"
        ng-model="profile.last"
        ng-disabled="lockInputs")

    .form-group.col-xs-12
      label(for="register-school") school *
      input#register-school.form-control(
        type="text" placeholder="Bitcamp Academy"
        ng-model="profile.school"
        ng-disabled="lockInputs")

    .form-group.col-xs-12
      label(for="mode-of-travel") travel funds needed
      input#mode-of-travel.form-control(
        type="text" placeholder="$75"
        name="mode-of-travel"
        ng-model="profile.travel"
        ng-disabled="lockInputs"
        tooltip="If you requested travel reimbursement, we'll be in touch within 10 days to let you know if you're being reimbursed, or if your school has a bus."
        tooltip-trigger="focus"
        tooltip-placement="top")

     .form-group.col-xs-12.col-sm-6
      label shirt size
      select#register-tshirt-size.form-control.input-md(
        ng-model="profile.tshirt"
        ng-disabled="lockInputs")
        option S (men)
        option S (women)
        option M (men)
        option M (women)
        option L (men)
        option L (women)
        option XL (men)
        option XL (women)

    .form-group.col-xs-12.col-sm-6
      label.label(for="register-dietary-restrictions") dietary restrictions
      input#register-dietary-restrictions.form-control(
        type="text" placeholder="vegan, halal, carnivore"
        ng-model="profile.dietary"
        ng-disabled="lockInputs")


  footer
    input(type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px; visibility: hidden;")
    .row
      .form-group.col-xs-12
        button#register-continue2.btn.btn-info(
          ng-click="submit()"
          ng-class="{'btn-danger': err, 'btn-wait': submitting}")
            | {{continueBtn || 'continue'}}
