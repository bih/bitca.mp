#register-two
  p
    small * = required

  .row
    .form-group.col-xs-6
        input#register-fname.form-control(
          type="text" placeholder="* first name")
    .form-group.col-xs-6
        input#register-lname.form-control(
          type="text" placeholder="* last name")


  .row
    .form-group.col-xs-12
        input#register-school.form-control(
          type="text" placeholder="school")

  .row
    .form-group.col-xs-12.col-sm-6
      input#register-majors.form-control(
        type="email" placeholder="major(s)")
    .form-group.col-xs-12.col-sm-6
        input#register-minors.form-control(
          type="text" placeholder="minor(s)")

  .row
    .form-group.col-xs-12.col-sm-7
      label(for="mode-of-transportation") * mode of transportation
      select#mode-of-transportation.form-control.input-md(name="mode-of-transportation")
        option get myself there
        option can take a bus
        option need a plane
    .form-group.col-xs-6.col-sm-3.text-right
      br
      label(for="register-stipend") travel stipend?
    .form-group.col-xs-6.col-sm-2.text-left
      h3
        input#register-stipend(type="checkbox", name="register-stipend")


footer
  .row
    .form-group.col-xs-12.col-sm-6
      a(ui-sref="register.one" ng-if="!cookie")
        button#register-goback2.btn.btn-warning go back
      a(ui-sref="main"         ng-if="cookie")
        button#register-goback2.btn.btn-warning go back
    .form-group.col-xs-12.col-sm-6
      a(ui-sref="register.three")
        button#register-continue2.btn.btn-success
          | continue
