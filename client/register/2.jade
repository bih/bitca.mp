#register-two
  p
    small * = required

  .row
    .form-group.col-xs-12.col-sm-6
      label(for="register-fname") * first name
      input#register-fname.form-control(
        type="text" placeholder="sally"
        ng-model="profile.first")
    .form-group.col-xs-12.col-sm-6
      label(for="register-lname") * last name
      input#register-lname.form-control(
        type="text" placeholder="bitcamper"
        ng-model="profile.last")


  .row
    .form-group.col-xs-12
      label(for="register-school") school
      input#register-school.form-control(
        type="text" placeholder="bitcamp high"
        ng-model="profile.school")

  .row
    .form-group.col-xs-12.col-sm-7
      label(for="mode-of-transportation") * mode of transportation
      select#mode-of-transportation.form-control.input-md(
        name="mode-of-transportation"
        ng-model="profile.transportation")
        option get myself there
        option can take a bus
        option need a plane

    .col-xs-12.col-sm-5#register-stipend
      .row#stipend
        .form-group.col-xs-12
          input#stipend-input(type="checkbox", name="stipend-input"
            ng-model="profile.stipend")
          label.label.checkbox-label(for="stipend-input") travel stipend?

footer
  .row
    .form-group.col-xs-12.col-sm-8.col-sm-push-4
      a(ui-sref="register.three")
        button#register-continue2.btn.btn-info
          | continue
    .form-group.col-xs-12.col-sm-4.col-sm-pull-8
      a(ui-sref="{{cookie && 'main' || 'register.one'}}")
        button#register-goback2.btn.btn-warning go back
